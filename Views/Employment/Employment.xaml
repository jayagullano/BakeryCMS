<Page x:Class="AuntRosieUserInterface.Views.Employment.Employment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuntRosieUserInterface.Views.Employment"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Event" >

    <Page.Resources>
        <Style TargetType="ToolTip" x:Key="tt">
            <Setter Property="PlacementRectangle" Value="120,10,0,0"/>
            <Setter Property="HorizontalOffset" Value="30"/>
            <Setter Property="VerticalOffset" Value="6"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Fonts/Roboto-Light.ttf #Roboto"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Placement" Value="Bottom"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
            <Setter Property="Background" Value="#FE2E2E"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="100"/>

        </Style>
        <Style x:Key="font_style" TargetType="TextBlock">

            <Setter Property="FontFamily"
                    Value="Fonts/Roboto-Light.ttf #Roboto"/>

            <Setter Property="VerticalAlignment"
                    Value="Center"/>

            <Setter Property="HorizontalAlignment"
                    Value="Left"/>

            <Setter Property="Foreground"
                    Value="#000"/>

            <Setter Property="FontSize"
                    Value="15"/>

        </Style>
    </Page.Resources>

    <Grid>

        <!--// Background Color //-->

        <Grid Background="Black">

            <!--// Background Image //-->

            <Grid x:Name="BG" >

                <Grid.Background>

                    <ImageBrush x:Name="img_bg"
                                ImageSource="/Images/Bakery Image.jpg"
                                Stretch="Fill"/>

                </Grid.Background>
                <StackPanel x:Name="MainScreen" HorizontalAlignment="Left" Height="600" Width="644" Margin="75,10,0,0" VerticalAlignment="Top" />
                <Frame x:Name="HomeScreen"/>
            </Grid>

            <!--// Navigation Panel //-->

            <Grid   x:Name="nav_pnl"
                    HorizontalAlignment="Left"
                    Width="148"
                    Background="#FFF"
                    Margin="70,0,0,0">

                <StackPanel x:Name="st_pnl">

                    <!-- List Item For Main Page -->

                    <ListView  x:Name="LV"
                               Background="Transparent"
                               BorderBrush="Transparent"
                               ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                               HorizontalAlignment="Right">

                        <!-- List Item For Inventory Icon-->
                        <ListViewItem HorizontalAlignment="Right"
                                      Margin="0,0,0,15" >
                            <StackPanel Orientation="Horizontal"
                                        Width="230">
                                <Image Source="/Images/Employment.png"
                                       Stretch="Uniform"
                                       Margin="15,0,0,0"
                                       HorizontalAlignment="Center" RenderTransformOrigin="1.51,0.524" Width="96"/>

                            </StackPanel>

                        </ListViewItem>

                        <ListViewItem></ListViewItem>

                        <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15" Width="145">
                            <StackPanel Orientation="Horizontal"
                                        Width="136">

                                <Button x:Name="btnManage" Width="136"
                                        Height="40"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Click="OpenManageEmployee_Click">
                                    <TextBlock Text="Manage Employee"
                                           Style="{StaticResource font_style}" Width="126"
                                           HorizontalAlignment="Center" Height="17"/>
                                </Button>
                            </StackPanel>
                            <!--// Tooltip //-->
                            <ListViewItem.ToolTip>
                                <ToolTip 
                                         Content="Opens the Employee Management Screen"
                                         Style="{StaticResource tt}"
                                         BorderThickness="1"/>
                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!-- Add Employee View -->

                        <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15" Width="145">
                            <StackPanel Orientation="Horizontal"
                                        Width="136">

                                <Button x:Name="btnAddEmployee" Width="136"
                                        Height="40"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Click="OpenAddEmployee_Click">
                                    <TextBlock Text="Add New Employee"
                                           Style="{StaticResource font_style}" Width="131"
                                           HorizontalAlignment="Center" Height="17"/>
                                </Button>
                            </StackPanel>
                            <!--// Tooltip //-->
                            <ListViewItem.ToolTip>
                                <ToolTip 
                                         Content="Adds A New Employee"
                                         Style="{StaticResource tt}"
                                         BorderThickness="1"/>
                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!-- Payroll View -->

                        <ListViewItem HorizontalAlignment="Left"
                                      Margin="0,0,0,15" Width="145">
                            <StackPanel Orientation="Horizontal"
                                        Width="136">

                                <Button x:Name="btnPayroll" Width="135"
                                        Height="40"
                                        Background="{x:Null}"
                                        BorderBrush="{x:Null}"
                                        Click="OpenPayroll_Click">
                                    <TextBlock Text="Payroll"
                                           Style="{StaticResource font_style}" Width="48"
                                           HorizontalAlignment="Right"/>
                                </Button>
                            </StackPanel>
                            <!--// Tooltip //-->
                            <ListViewItem.ToolTip>
                                <ToolTip 
                                         Content="Opens the Employee Payroll"
                                         Style="{StaticResource tt}"
                                         BorderThickness="1"/>
                            </ListViewItem.ToolTip>

                        </ListViewItem>

                        <!--// Listview items style template //-->

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <Border x:Name="Bd"
                                                    Height="50"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True"/>
                                                    </MultiTrigger.Conditions>

                                                    <Setter Property="Background"
                                                            TargetName="Bd"
                                                            Value="#FE2E2E"/>

                                                    <Setter Property="BorderBrush"
                                                            TargetName="Bd"
                                                            Value="#000"/>

                                                    <Setter Property="BorderThickness"
                                                            TargetName="Bd"
                                                            Value="2"/>

                                                </MultiTrigger>

                                            </ControlTemplate.Triggers>

                                        </ControlTemplate>

                                    </Setter.Value>

                                </Setter>

                            </Style>

                        </ListView.ItemContainerStyle>

                    </ListView>

                </StackPanel>

            </Grid>

        </Grid>

    </Grid>
</Page>
